<div class="header">
	<div class="row">
		<div class="span2">
			<div style="width: 100%; height: 120px;">
			<%= link_to image_tag("webpage/logo.png", :alt => "Moolango logo"), :root %>
			</div>
		</div>
		<div class="span7">
			<div style="width: 100%; height: 120px;">
				<%= image_tag "webpage/banner_biplane.png", :alt => "Make some moola speaking your lango" %>
			</div>
		</div>
		<div class="span3">
			<div class="row no-space">
				<div style="width: 100%; height: 150px;">
					<div class="span1">
						<div class="nav_buttons">
						<%= link_to image_tag("webpage/twitter.png", :alt => "Twitter button"), "http://twitter.com/Moolango", :target => "_blank" %>
						</div>
					</div>
					<div class="span1">
						<div class="nav_buttons">
						<%= link_to image_tag("webpage/facebook.png", :alt => "Facebook button", :style => "margin-top: 2px;"), "http://facebook.com/Moolango", :target => "_blank" %>
						</div>
					</div>
					<div class="span1">
						<div class="nav_buttons">
						<%= link_to image_tag("webpage/blog.png", :alt => "Blog button"), "http://blog.moolango.com", :target => "_blank" %>
						</div>
					</div>
					<div class="span1">
						<div class="nav_buttons">
						<%= link_to image_tag("webpage/login.png", :alt => "Login button", :style => "margin-top: 5px;"), :signin %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="span6">
			<div class="landing_left_hemisphere">
				<iframe src="http://player.vimeo.com/video/41532013?title=0&amp;byline=0&amp;portrait=0&amp;color=ff9933" width="100%" height="100%" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
			</div>
		</div>
		<div class="span6">
			<div class="landing_right_hemisphere">
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
 	 		<%= devise_error_messages! %>
				<div class="landing_header">
						<div><%= f.label :firstname %><br />
					  <%= f.text_field :firstname %></div>

  					<div><%= f.label :email %><br />
					  <%= f.email_field :email %></div>

					  <div><%= f.label :password %><br />
					  <%= f.password_field :password %></div>	
				</div>
				<div style="width: 100%;">
					<div class="landing_begin_button">
						<%= link_to image_tag("webpage/next_button.png", :alt => "Next button"), :signup %>
					</div>
				</div>
			</div>
			<% end %>
		</div>	
	</div>
	<div class="row">
		<div class="span12">
			<div class="landing_background_image">
			<%= image_tag "webpage/globe.png", :alt => "HTML globe footer"%>
			</div>
		</div>
	</div>
</div>



