<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Creator</th>
    <th>Joiner</th>
    <th>Name</th>
    <th>Busy</th>
    <th>Session</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.creator_id %></td>
    <td><%= room.joiner_id %></td>
    <td><%= room.name %></td>
    <td><%= room.busy %></td>
    <td><%= room.session_id %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

