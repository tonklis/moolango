<h1>Listing schedules</h1>

<table>
  <tr>
    <th>Purpose</th>
    <th>When</th>
		<th>Options</th>
		<th>User</th>
		<th>Teacher</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @schedules.each do |schedule| %>
  <tr>
    <td><%= schedule.purpose %></td>
    <td><%= schedule.when %></td>
		<td><%= schedule.options %></td>
		<td><%= schedule.user_id ? User.find(schedule.user_id).email : nil %>
		<td><%= schedule.teacher_id ? User.find(schedule.teacher_id).email : nil %>
    <td><%= link_to 'Show', schedule %></td>
    <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
    <td><%= link_to 'Destroy', schedule, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

