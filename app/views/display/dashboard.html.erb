<div class="landing_header">
	<%= current_user.firstname.upcase %>'S CONVERSATIONS
</div>
<br /><br />
<div class="span8 offset2 moolango-box" >
	<div style="margin: 15px;">
		<table class="table table-bordered" style="background-color: white;" >
			<thead>
				<tr style="background-color: #9bd8f7; color: white;">
					<th>When</th>
					<th>Topic</th>
					<th>Duration</th>
					<th>Language</th>
					<th>Status</th>
				</tr>
			</thead>
			<tbody style="color: #3c89bd;">
				<% 
					count = 0
					time_booked = 0
		 		%>
				<% @conversations.each do |conversation| %>
				<%
					count+= 1
					time_booked+= conversation.duration
			 	%>
				<% if count % 2 != 0 %>
				<tr style="">
				<% else %>
				<tr style="background-color: #d4effa">
				<% end %>
					<!-- s.when.in_time_zone("Eastern Time (US & Canada)").strftime("%A %b %d, %Y %H:%M %Z") -->
					<td> <%= conversation.when.strftime("%A %b %d, %Y - %I:%M %p %Z") %> </td>
					<td> <%= conversation.topic %>	</td>
					<td> <%= conversation.duration %> min </td>
					<td> <%= conversation.language.name %> </td>
					<% if conversation.is_ready %>
					<td class="orange-link"> <%= link_to "Enter room", :controller => "display", :action => "conversation_room", :id => conversation.id %></td>
					<% else %>
					<td> Room not ready</td>
					<% end %>
				</tr>
				<!--tr style="background-color: #d4effa">
					<td> Saturday Dec 22, 2012 20:00 EST	</td>
					<td> Chuck Norris	</td>
					<td> 30 minutes	</td>
					<td> English	</td>
					<td> Room not yet ready</td>
				</tr-->
				<% end %>
			</tbody>
		</table>

		<% if current_user.credits > 0 %>	
			<div class="landing_get_started_button" style="margin-top: 0;" onclick="window.open('<%= new_conversation_ui_url %>', '_self');">
				<div class="calendar_button">
					<div style="margin: 0 10px 0 60px;">
						<%= link_to raw("Book a <br /> conversation"), :new_conversation_ui %>
					</div>
				</div>
			</div>
		<% else %>
		<div class="landing_get_started_button" style="margin-top: 0; cursor: default;">
				<div class="calendar_button" style="opacity: 0.4;	filter: alpha(opacity=40);">
					<div style="margin: 0 10px 0 60px;">
						<%= raw("Book a <br /> conversation") %>
					</div>
				</div>
			</div>
		<% end %>
		<div class="time_booked_box">
			<div class="time_booked_text">
				TIME BOOKED
			</div>
			<div class="time_booked_value">
				<%= time_booked %> min
			</div>
		</div>
	</div>
</div>
