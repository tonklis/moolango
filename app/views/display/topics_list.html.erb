<% @title_desc = "Topics List" %>
	
	<div style="">
		<div style="height: auto; text-align: center;">
			<%= image_tag "webpage/click_on_the_image.png", :alt => "click on the image to pick a topic", :style => "margin: -30px auto 20px auto;"%>
		</div>
		
		<div id="content" class="centered">
			
			<% @enabled_topics.each do |topic| %>
				<div class="box one-edge-shadow">
					<%= link_to image_tag(topic.thumbnail_url, :onclick=>"topicOpen(#{topic.id}, currentUserId, pusher, #{@language_id});" ), "#myModal", "data-toggle"=>"modal", "data-backdrop"=>"static", "data-keyboard"=>"false" %>
				</div>
			<% end %>

			<% @disabled_topics.each do |topic| %>
				<div class="box one-edge-shadow">
					<%= image_tag(topic.thumbnail_url) %>
				</div>
			<% end %>

	<div id="data_holder" data-user-id="<%=current_user.id%>" data-pusher-key="<%=ENV['PUSHER_KEY']%>" data-room-id="">
	</div>

<div class="modal hide fade" id="myModal">
  <div class="modal-header">
    <h3>Please wait</h3>
  </div>
  <div class="modal-body" style="text-align: center;">
    <p id="modal_message">Searching for someone to practice withâ€¦</p>
		<div style="width: 45%; margin: auto;">
			<div id="modal_prog_bar" class="progress progress-striped">
				<div id="modal_progress" class="bar" style="width: 100%;"></div>
			</div>
		</div>
		<p id="modal_wait_message"></p>
		<p style="font-size: 11px;"><i> This conversation may be recorded for quality assurance </i></p> 
	</div>
  <div class="modal-footer" style="text-align: center;">
		<a id="modal_button_close" href="#" class="btn" onclick="windowClose();">Close</a>
		
		<div id="modal_alert" class="alert alert-block alert-error fade in" style="display: none;">
			<h4 class="alert-heading">We're almost there!</h4>
			<p> We're still trying to hook you up, but you get the final word.</p>
			<p>
				<a class="btn btn-danger" href="#" data-dismiss="modal" onclick="cancelRooms('<%= current_user.id %>');">Cancel</a> <a class="btn" href="#" onclick="hideAlert()">Stay</a>
      </p>
		</div>
		
  </div>
</div>

<script type="text/javascript">

	var currentUserId = $("#data_holder")[0].getAttribute("data-user-id");
	var pusher = new Pusher($("#data_holder")[0].getAttribute("data-pusher-key"), { encrypted: true });

	$(function(){
		var $container = $('#content');
		$container.imagesLoaded(function(){
			$container.masonry({
				itemSelector : '.box',
				gutterWidth: 5,
				isFitWidth: true
			});
		});
	});
	
</script>
