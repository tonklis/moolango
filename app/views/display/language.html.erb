<div class="row">
	<div class="span6 offset3">
		<div style="height: 80px;">
		<%= image_tag "webpage/language_to_practice.png", :alt => "click on the language to begin", :style => "margin: -30px auto 20px auto;"%>
		</div>
	</div>
</div>
<div class="row">
	<div class="span8 offset1">
		<div style="width: 120%;">
			<div class="row-fluid">
				<% Language.all.each do |language| %>
					<div class="span2">
						<% if language.id == 1 or language.id == 2 %>	
							<%= link_to (image_tag language.thumbnail_url, :alt => language.name), "topics_list?id=#{language.id}" %>
						<% else %>
							<%= image_tag language.thumbnail_url, :alt => language.name %>
						<% end %>
					</div>
				<% end %>
			</div>	
		</div>			
	</div>
</div>
