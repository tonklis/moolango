<%= stylesheet_link_tag    "masonry/masonry" %>
<div class="row">
	<div class="action_body">
		<div class="span5 one-edge-shadow">
				<%= link_to image_tag("webpage/earn_button.gif", :alt => "earn button"), :earn %>
		</div>
		<div class="span5 one-edge-shadow">
				<%= link_to image_tag("webpage/practice_button.gif", :alt => "practice button"), :language_selection %>
			</div>
		</div>	
	</div>
</div>
<div id="first_signin_flag" data-flag="<%= @first_signin_flag %>"></div>
<script type="text/javascript">

	var first_signin = $("#first_signin_flag")[0].getAttribute("data-flag");
	if(first_signin == "true"){
		$("#credits").popover('show');
		setTimeout(function(){$("#credits").popover('hide');},4000);
	}
	
</script>
