<!DOCTYPE html>
<html>
<head>
  <title>Moolango <%= @title_desc if @title_desc %></title>
  <%= stylesheet_link_tag    "conversation_room/conversation_room" %>
	<%= javascript_include_tag "application" %>
	<!--<script src="http://staging.tokbox.com/v0.91/js/TB.min.js"></script>-->
	<script src="http://static.opentok.com/v0.91/js/TB.min.js"></script>
	<%= javascript_include_tag "pusher/pusher.min" %>
	<%= csrf_meta_tags %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta property="og:title" content="MooLango" />
	<meta property="og:type" content="Language Practice" />
	<meta property="og:url" content="http://moolango.com" />
	<meta property="og:image" content="http://www.moolango.com/assets/webpage/logo-f9b058d1dd43b070080ebfc130923998.png" />
	<meta property="og:description" content="Make some moola speaking your lango" />
	<meta property="og:site_name" content="Moolango" />
</head>
<body id="body">
	<div class="container">
		<div class="header">
			<div class="row">
				<div class="span12">
					<div class="title_image" >
						<div class="row-fluid" style="padding-top: 10px;">
							<div class="span4"></div>
							<div class="span4">
								<div id="totalTimeBar">
									<div id="timeBar"></div>
									<div id="totalTimeTxt"></div>
								</div>
							</div>
							<div class="span4">
								<div id="actionsDiv">
									<div id="endCallDiv">
										<%= form_tag('/interaction/end_call', :remote => true, :id => "end_call_form") do %>
											<%= hidden_field_tag :channel, @internal_session %>
											<%= hidden_field_tag :room_id, @room.id if @room%>
											<%= submit_tag "End Call", :class => "conversation_button" %>
										<% end %>
									</div>
									<div id="reconnectDiv">
										<button type="button" class="conversation_button" onClick="reconnect();">Reconnect</button>
									</div>
								</div>
							</div>
						</div>					
					</div>
				</div>
			</div>
		</div> 
	</div>
	<div class="container sheight">
			<%= yield %>
	</div>
	<div class="footer">
		<div class="footerText" style="float: left;">&nbsp;&nbsp;&nbsp;&copy; 2012 MooLango LLC</div>
		<div style="margin: 10px auto auto 40px; float: left;">
			<span class='st_facebook_hcount' displayText='Facebook'></span>
			<span class='st_twitter_hcount' displayText='Tweet'></span>
			<span class='st_sharethis_hcount' displayText='ShareThis'></span>
		</div>
		<span class="footerText" style="float: right; margin-right:30px;">
			<a href="mailto:hello@moolango.com"><img src="http://wwwcdn.net/ev/assets/images/vectors/afbig/mail-icon-clip-art.jpg" width="25px" height="20px" style="margin-top: -3px;"/>
Contact us!</a>
		</span>
		<script type="text/javascript">var switchTo5x=false;</script>
		<script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
		<script type="text/javascript">stLight.options({publisher: "58bcc210-352f-4981-869c-519804f479a5"}); </script>
	</div>

	<script id="IntercomSettingsScriptTag">
		var intercomSettings = {
		    app_id: 'medkivz',
		    email:  '<%= current_user.email unless current_user == nil %>',
		    created_at: '<%= current_user.created_at.to_time.to_i unless current_user == nil %>',
		    name: '<%= current_user.firstname.to_s + " " + current_user.lastname.to_s unless current_user == nil %>'
		};
	</script>

</body>
</html>
