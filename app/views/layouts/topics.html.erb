<!DOCTYPE html>
<html>
<head>
  <title>Moolango <%= @title_desc if @title_desc %></title>
  <%= stylesheet_link_tag    "masonry/masonry" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "uservoice/uv_snippet" %>
  <%= javascript_include_tag "pusher/pusher.min" %>
	<%= csrf_meta_tags %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<div class="container">
		<div class="header">
			<div class="row">
				<div class="span2">
					<div style="width: 100%; height: 120px; padding-top: 15px;">
					<%= link_to image_tag("webpage/logo.png", :alt => "Moolango logo"), :root %>
					</div>
				</div>
				<div class="span7">
					<div style="width: 100%; height: 120px;">
						<%= image_tag "webpage/banner_biplane.png", :alt => "Make some moola speaking your lango" %>
					</div>
				</div>
				<div class="span3">
					<div class="row no-space">
						<div style="width: 100%; height: 150px;">
							<div class="span1">
								<div class="nav_buttons">
								<%= link_to image_tag("webpage/twitter.png", :alt => "Twitter button"), "http://twitter.com/Moolango", :target => "_blank" %>
								</div>
							</div>
							<div class="span1">
								<div class="nav_buttons">
								<%= link_to image_tag("webpage/facebook.png", :alt => "Facebook button"), "http://facebook.com/Moolango", :target => "_blank" %>
								</div>
							</div>
							<div class="span1">
								<div class="nav_buttons">
								<%= link_to image_tag("webpage/blog.png", :alt => "Blog button"), "http://blog.moolango.com", :target => "_blank" %>
								</div>
							</div>
							<div class="span1">
								<div class="login_button">
								<% if current_user %>
									<%= image_tag "webpage/account_button.png", :alt => "My account button" %>
									<%= link_to image_tag("webpage/logout_button.png", :class=>"logout_button"), :logout %>
									<div class="account_text">
										$ <%= sprintf('%.2f', current_user.credits.round(2)) %>
									</div>
								<% else %>
									<%= link_to image_tag("webpage/login_button.png", :alt => "Login button"), :signin %>
									<div class="login_text">
										<%= link_to raw("LOG<br />IN"), :signin %>
									</div>
								<% end %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="container sheight">
		<div class="padding">
		<%= yield %>
		</div>
	</div>
	<div class="footer">
		<div class="footerText">
			&copy; 2012 MooLango LLC
		</div>
	</div>
</body>
</html>

