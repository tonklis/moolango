<style>
.field_with_errors { display: inline; }
</style>
<div class="row">
		<div class="span12">
				<div class="landing_header">
					SIGN UP FOR AN INVITE
				</div>
				<div class="earner_body moolango-box">
					<br />
					<% if @earner_form.errors.any? %>
						<div id="error_explanation" class="alert alert-error" style="width: 70%; margin: auto;">
							<ul>
								<% @earner_form.errors.full_messages.each do |msg| %>
									<li><%= msg %></li>
								<% end %>
							</ul>
						</div>
						<br />
					<% end %>
					<div class="earner_info">
						We've had a ton of folks signing up who want to make some money.
						<br />
						To save your spot in time, would you answer a few questions for us?
						<br /> <br />
					</div>
					<div class="earner_form" style="width: 65%;">
					<%= form_for(@earner_form) do |f| %>
						<div class="field">
							<%= f.label "Would you use Moolango if you earned $9 per hour of conversation?", :class => "earner_form_questions" %>
							<%= f.radio_button :pricing, 'true' %> Yes
							<%= f.radio_button :pricing, 'false' %> No
						</div> <br />
						<div class="field">
							<%= f.label "Would you like to use Moolango to fundraise for your favorite cause (Race for the Cure, Kiva, etc?)", :class => "earner_form_questions" %>
							<%= f.radio_button :donate, 'true' %> Yes
							<%= f.radio_button :donate, 'false' %> No
						</div> <br />
						<div class="field">
							<%= f.label "What's your e-mail address?", :class => "earner_form_questions" %>
							<%= f.text_field :email %>
						</div> <br />
						<div class="field">
							<%= f.check_box :agree, :class => "earner_form_questions"%>
							<%= f.label "Cool if we contact you via e-mail when your invite is ready?" %>
						</div> <br />
						<div class="actions" style="text-align: center">
							<%= f.submit "GET YOUR INVITE", :class => "next_button" %>
						</div>
					<% end %>
					</div>
				</div>
				<br/>
				<br/>
		</div>
</div>
<br/> <br/>
